float4x4 Jacobian(float4 x)
{
    float r = max(1e-10, x[1]);
    float theta = max(1e-10, min(x[2], PI*(1 - 1e-7)));
    float phi = x[3];
    float ir        = 1.0/r;
    float sin_theta = sin(theta);
    float cos_theta = cos(theta);
    float csc_theta = 1.0/sin_theta;
    float sin_phi   = sin(phi);
    float cos_phi   = cos(phi);

    float4x4 J =
    {
        {1, 0, 0, 0},
        {0,  sin_theta * cos_phi, sin_theta * sin_phi, cos_theta},
        {0, ir * cos_theta * cos_phi, ir * cos_theta * sin_phi, - ir * sin_theta},
        {0, - ir * csc_theta * sin_phi, ir * csc_theta * cos_phi, 0}
    };

    return J;
}

float4x4 InverseJacobian(float4 x)
{
    float r = x[1];
    float theta = x[2];
    float phi = x[3];
    float sin_theta = sin(theta);
    float cos_theta = cos(theta);
    float sin_phi   = sin(phi);
    float cos_phi   = cos(phi);

    float4x4 J_inv =
    {
        {1, 0, 0, 0},
        {0, sin_theta * cos_phi, r * cos_theta * cos_phi, - r * sin_theta * sin_phi},
        {0, sin_theta * sin_phi, r * cos_theta * sin_phi, r * sin_theta * cos_phi},
        {0, cos_theta, - r * sin_theta, 0}
    };

    return J_inv;
}

float3 CartesianToSpherical(float3 xyz)
{
    float r = max(1e-10, sqrt(xyz[0]*xyz[0] + xyz[1]*xyz[1] + xyz[2]*xyz[2]));
    float theta = max(1e-10, min(PI - 1e-6, acos(xyz[2]/r)));
    float phi = atan2(xyz[1], xyz[0]);

    float3 x_spherical;
    x_spherical[0] = max(r, 1e-10);
    x_spherical[1] = theta;
    x_spherical[2] = phi;

    return x_spherical;
}

